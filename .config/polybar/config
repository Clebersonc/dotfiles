[module/player-cmus]
type = custom/script
exec = sh ~/.config/polybar/scripts/cmus.sh
exec-if = cmus-remote -Q
interval = 1
;click-left = cmus-remote -n
;click-right = cmus-remote -r
;click-middle = ~/polybar-scripts/player-cmus-toggle.sh

