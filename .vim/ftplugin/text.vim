" activate word completion.
packadd ncm2-look.vim

" activate ncm2 autocomplete.
let g:ncm2#auto_popup = 1

" Wrap lines longer than the width of the window.
setlocal wrap
" Always enable spell checking.
setlocal spell
" Use 'par' command to auto indent text with '='.
set equalprg=par

" Enable spell checking.
setlocal spell

" Wrap lines longer than the width of the window.
setlocal wrap

" Disable all line numbers.
setlocal nonumber
setlocal norelativenumber
